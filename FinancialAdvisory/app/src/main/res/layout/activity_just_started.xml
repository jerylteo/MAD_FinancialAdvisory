<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:background="#F7F9FC"
    >

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/undraw_powerful_26ry" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/img"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="27sp"
        android:text="Let&apos;s get started" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:textColor="#707070"
        android:textSize="14sp"
        android:text="Never a better time than now to start
thinking about how you manage all
your finances with ease." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/custom_blue_button"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:text="Create account" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:text="Login to Account"
                android:textColor="#2573D5"
                android:textAllCaps="false"
                android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>